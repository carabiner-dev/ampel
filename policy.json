{
    "runtime": "cedar/v1.0.0",
    "id": "OSPS",
    "version": "",
    "policies": [
        {
            "id": "AC-07",
            "description": "The project's version control system MUST require multi-factor authentication that does not include SMS ",
            "identities": [
                {
                    "type": "exact",
                    "issuer": "https://accounts.google.com/",
                    "identity": "puerco@gmail.com"
                }
            ],
            "context": {
                "values": [{
                    "name": "author",
                    "type": "regex",
                    "required": true                    
                }]
            },
            "predicateTypes": [
                "text/spdx",
                "application/vnd.cyclonedx+json"
            ],    
            "transformers": [
                { "id": "internal:sbom-merge" },
                { "id": "internal:vex-applier" }
            ],
            "tenets": [
                {
                    "runtime": "cel/v14.0",
                    "code": "privateer.checks.mfa"
                },
                {
                    "code": "privateer.checks.mfa.sms = false", 
                    "outputs": [ 
                        {"code": "sbom.supplier", "type": "string"}
                    ]
                }
            ]            
        }
    ]
}
